@model ZrakForum.DataAccess.Entities.Thread

@{
    ViewBag.Title = "Show";
}

@if (Model != null)
{
    if (Model.Posts == null)
    {
        <h2 class="text-dark">Neuspelo učitavanje teme. Molimo pokušajte kasnije</h2>
    }
    else
    {
        <h2 class="text-dark">@Model.Name</h2>
        <table class="table table-striped table-hover">
            @foreach (var item in Model.Posts)
            {
                <tr>
                    <td class="border-right" style="width: 20%">
                        <span>
                            <img class="img-fluid rounded-circle img-profile"
                                 src="~/wwwroot/img/profile.png" />
                        </span>
                        <br />
                        <span class="font-weight-bold">@item.Author.Username</span>
                        <br />
                        <span class="font-weight-bold">@item.CreatedAt.ToString("dd. MM. yyyy. HH:mm")h</span>
                    </td>
                    <td class="text-dark" style="width: 80%">@item.Content</td>
                </tr>
            }
        </table>

        @Html.ActionLink("Dodaj komentar", "Create", "Post", new { onThread = Server.UrlEncode(Model.Name) }, new { @class = "btn btn-dark mb-2 float-right" })
    }
}
else
{
    <h2 class="text-dark">Nema teme sa tim nazivom</h2>
}