@model ZrakForum.DataAccess.Entities.Thread

@{
    ViewBag.Title = "Show";
}

@if (Model != null)
{
    if (Model.Posts == null)
    {
        <h2>Neuspelo učitavanje komentara za ovu temu</h2>
    }
    else
    {
        <h2>@Model.Name</h2>
        <table class="table table-striped table-hover">
            @foreach (var item in Model.Posts)
            {
                <tr>
                    <td style="width: 20%">
                        <span>
                            <img class="img-fluid rounded-circle img-profile"
                                 src="https://www.kindpng.com/picc/m/24-248729_stockvader-predicted-adig-user-profile-image-png-transparent.png" />
                        </span>
                        <br />
                        <span>@item.Author.Username</span>
                        <br />
                        <span>@item.CreatedAt.ToString("dd. MM. yyyy. HH:mm")h</span>
                    </td>
                    <td style="width: 80%">@item.Content</td>
                </tr>
            }
        </table>

        <button class="btn btn-primary mb-2 float-right" id="showPostForm">Dodaj komentar</button>

        <form id="postForm">
            <input type="text" />
        </form>
    }
}
else
{
    <h2>Nema teme sa tim nazivom</h2>
}

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $("#postForm").hide();

            $("#showPostForm").click(function () {
                $("#postForm").toggle('slow');
            });
        });
    </script>
}