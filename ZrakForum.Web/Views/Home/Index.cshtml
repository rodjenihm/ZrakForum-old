@model IEnumerable<ZrakForum.Web.Models.ForumInfo>
@{
    ViewBag.Title = "Početna";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        Pregledate forum kao gost. Gosti foruma imaju veoma ograničen pristup sadržajima foruma.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="text-light bg-dark p-2">Spisak foruma</div>
<table class="table table-striped table-hover">
    <tbody>
        @foreach (var forumInfo in Model)
        {
            <tr>
                <td style="width: 60%">
                    <span class="font-weight-bold text-dark font-italic">
                        @Html.ActionLink(forumInfo.Name, "Show", "Forum", new { forumName = Server.UrlEncode(forumInfo.Name) }, new { @class = "navbar-brand text-dark" })
                    </span>
                    <br />
                    <span class="font-weight-bold">
                        @forumInfo.Description
                    </span>
                    <br />
                    <span class="font-weight-bold">
                        Tema: @forumInfo.ThreadCount, Komentara: @forumInfo.PostCount
                    </span>
                </td>
                <td style="width: 20%">
                </td>
            </tr>
        }
    </tbody>
</table>