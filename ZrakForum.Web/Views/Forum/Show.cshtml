@model IEnumerable<ZrakForum.DataAccess.Models.ForumThread>

@{
    ViewBag.Title = "Index";
}


@if (Model.Any())
{
    <table class="table table-hover table-striped table-bordered">
        <thead class="bg-dark text-light">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ThreadName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.StartedBy)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.ThreadName, "Show", "Forum", new { threadName = Server.UrlEncode(item.ThreadName) }, null)
                </td>
                <td>
                    @item.StartedBy @item.StartedAt.ToString("dd. MM. yyyy.")
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>Trenutno nema tema na ovom forumu</h2>
}

@Html.ActionLink("Nova tema", "Create", "Thread", null, new { @class = "btn btn-dark mb-2 float-right" })

